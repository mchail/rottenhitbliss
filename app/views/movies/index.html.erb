<h1>Hitbliss Catalog</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>First seen</th>
    <th>Last seen</th>
    <th>Rt title</th>
    <th>Rt description</th>
    <th>Rt Critics Rating</th>
    <th>Rt Audience Rating</th>
    <th>Year</th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= image_tag movie.image_url %></td>
    <td><%= movie.created_at.in_time_zone("US/Pacific").strftime("%-d %b %Y") %></td>
    <td><%= movie.last_seen.strftime("%-d %b %Y") %></td>
    <td><%= movie.rt_title %></td>
    <td><%= movie.rt_description %></td>
    <td><%= movie.rt_critics_rating %></td>
    <td><%= movie.rt_audience_rating %></td>
    <td><%= movie.rt_year %></td>
  </tr>
<% end %>
</table>

